    "script-loader": "^0.6.1",
    "sinon": "^1.15.4",
    "source-map-support": "^0.4.0",
    "style-loader": "^0.13.0",
    "superagent": "^1.4.0",
    "template-html-loader": "0.0.3",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.2",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-dev-server": "^1.12.0",
