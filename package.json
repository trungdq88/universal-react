{
  "name": "universal-react",
  "version": "0.0.0",
  "description": "Boilerplate for universal app powered by Express and React",
  "main": "build/app.js",
  "scripts": {
    "prestaging": "npm run clean",
    "staging": "NODE_ENV=staging npm run webpack",
    "preproduction": "npm run clean",
    "production": "NODE_ENV=production npm run webpack",
    "clean": "rimraf $npm_package_config_buildDir && mkdir $npm_package_config_buildDir",
    "env": "env",
    "lint": "eslint --ext .jsx ---ext.js ./src && echo No linting errors.",
    "prebuild": "npm run clean",
    "pretest": "npm run lint",
    "pretest-travis": "npm install && npm run lint",
    "server-once": "babel-node ./src/server.js",
    "server": "source ./env/dev.env && export $(cut -d= -f1 ./env/dev.env) && NODE_ENV=development nodemon --exec npm run server-once -- ./src/server.js",
    "client": "NODE_ENV=development node dev-server ./webpack/config.client",
    "start": "concurrent --kill-others \"npm run server\" \"npm run client\"",
    "test": "NODE_ENV=test karma start",
    "test-travis": "NODE_ENV=test karma start --single-run",
    "webpack-client": "webpack --colors --progress --config ./webpack/config.client",
    "webpack-server": "webpack --colors --progress --config ./webpack/config.server",
    "webpack": "npm run webpack-client && npm run webpack-server"
  },
  "repository": {
    "type": "git+git@github.com:trungdq88/universal-react.git",
    "url": "https://github.com/trungdq88/universal-react"
  },
  "author": "SSS",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/trungdq88/universal-react/issues"
  },
  "config": {
    "buildDir": "./build",
    "devHost": "localhost",
    "devPort": 8763,
    "apiPort": 8011
  },
  "homepage": "",
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "babel-cli": "^6.1.18",
    "babel-core": "^6.1.4",
    "babel-eslint": "^4.1.8",
    "babel-loader": "^6.2.2",
    "babel-plugin-rewire": "^0.1.8",
    "babel-polyfill": "^6.1.4",
    "babel-preset-es2015": "^6.1.4",
    "babel-preset-react": "^6.1.4",
    "babel-preset-stage-0": "^6.1.18",
    "babel-runtime": "^6.3.19",
    "chai": "^3.4.1",
    "concurrently": "^1.0.0",
    "css-loader": "^0.23.1",
    "eslint": "^1.6.0",
    "eslint-config-airbnb": "^5.0.0",
    "eslint-plugin-react": "^3.5.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.4",
    "glob": "^6.0.4",
    "history": "^1.13.1",
    "imports-loader": "^0.6.4",
    "istanbul-instrumenter-loader": "^0.1.3",
    "json-loader": "^0.5.3",
    "karma": "^0.13.15",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.2.0",
    "karma-cli": "^0.1.1",
    "karma-coverage": "^0.5.3",
    "karma-coveralls": "^1.1.2",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sinon": "^1.0.4",
    "karma-source-map-support": "^1.0.0",
    "karma-sourcemap-loader": "^0.3.5",
    "karma-webpack": "^1.5.1",
    "less": "^2.5.3",
    "less-loader": "^2.2.1",
    "lodash": "^4.2.1",
    "mocha": "^2.2.5",
    "mocha-loader": "^0.7.1",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "opn": "^4.0.0",
    "phantomjs": "^2.1.3",
    "postcss-loader": "^0.8.0",
    "react-addons-test-utils": "^0.14.2",
